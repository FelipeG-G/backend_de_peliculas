{
  "compilerOptions": {
    /* Directorios */
    "rootDir": "./src",
    "outDir": "./dist",

    /* Configuración del entorno */
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "types": ["node"],

    /* Opciones estrictas y seguras */
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    /* Soporte para importar archivos .ts desde otros módulos */
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,

    /* Generar mapas para depuración */
    "sourceMap": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}



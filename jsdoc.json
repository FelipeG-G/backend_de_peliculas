{
  "tags": {
    "allowUnknownTags": true
  },
  "source": {
    "include": ["src"],
    "includePattern": ".+\\.ts$",
    "excludePattern": "(node_modules|dist)"
  },
  "plugins": [
    "plugins/markdown",
    "node_modules/better-docs/typescript"
  ],
  "opts": {
    "encoding": "utf8",
    "destination": "./docs",
    "recurse": true,
    "verbose": true,
    "template": "node_modules/better-docs"
  },
  "babel": {
    "extensions": ["ts"],
    "presets": [
      "@babel/preset-env",
      "@babel/preset-typescript"
    ]
  }
}
